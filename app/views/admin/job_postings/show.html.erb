<div class="container">
  <div class="admin-nav">
    <%= link_to "â† Back to Admin", admin_job_postings_path, class: "url-link" %>
    <%= link_to "Edit This Job", edit_admin_job_posting_path(@job_posting), class: "apply-button" %>
  </div>

  <div class="job-detail">
    <div class="job-header">
      <div class="job-badges">
        <% if @job_posting.location.present? %>
          <span class="badge location-badge"><%= @job_posting.location %></span>
        <% end %>
        <% case @job_posting.visa_requirement %>
        <% when 'required' %>
          <span class="badge rtw-badge">Right to work required</span>
        <% when 'not_required' %>
          <span class="badge rtw-not-required-badge">No right to work required</span>
        <% when 'unknown' %>
          <span class="badge rtw-unknown-badge">Visa requirements unknown</span>
        <% end %>
      </div>
      
      <h1 class="job-title"><%= @job_posting.title %></h1>
      <p class="job-date">Posted: <%= @job_posting.formatted_date_posted %></p>
    </div>

    <div class="job-content">
      <div class="job-description">
        <h3>Job Description</h3>
        <div class="description-text">
          <%= simple_format(@job_posting.description) %>
        </div>
      </div>

      <div class="job-apply">
        <h3>Community-provided link</h3>
        <div class="application-link">
          <%= link_to @job_posting.application_url, @job_posting.application_url, 
              target: "_blank", 
              rel: "noopener",
              class: "url-link" %>
        </div>
      </div>
    </div>
  </div>
</div>