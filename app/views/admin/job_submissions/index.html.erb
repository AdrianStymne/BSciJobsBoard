<div class="container">
  <h1>Job Submissions</h1>
  
  <div class="admin-nav">
    <a href="<%= admin_job_postings_path %>" class="url-link">‚Üê Back to Published Jobs</a>
  </div>

  <div class="job-listings">
    <% @job_submissions.each do |submission| %>
      <div class="job-card">
        <div class="job-badges">
          <span class="badge location-badge"><%= submission.location %></span>
          <% if submission.requires_right_to_work %>
            <span class="badge rtw-badge">Right to work required</span>
          <% end %>
        </div>
        
        <h3 class="job-title"><%= submission.title %></h3>
        <p class="job-summary"><strong>Company:</strong> <%= submission.company_name %></p>
        <p class="job-summary"><strong>Contact:</strong> <%= submission.contact_email %></p>
        <p class="job-summary"><%= submission.summary %></p>
        
        <div class="job-meta">
          <p class="job-date">Submitted: <%= submission.formatted_submitted_date %></p>
        </div>
        
        <div class="admin-actions">
          <%= link_to "View Details", admin_job_submission_path(submission), class: "url-link" %>
          <%= link_to "Approve & Publish", approve_admin_job_submission_path(submission), 
              method: :patch, 
              data: { confirm: "Approve and publish this job?" }, 
              class: "url-link", 
              style: "color: #28a745;" %>
          <%= link_to "Delete", admin_job_submission_path(submission), 
              method: :delete, 
              data: { confirm: "Are you sure?" }, 
              class: "url-link", 
              style: "color: #dc3545;" %>
        </div>
      </div>
    <% end %>
  </div>

  <% if @job_submissions.empty? %>
    <p class="empty-state">No job submissions yet.</p>
  <% end %>
</div>